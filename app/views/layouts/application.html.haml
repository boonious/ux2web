!!!
%meta{:charset=>"utf-8"}
%meta{:name=>"description", :content=>"UX2.0: Usability and Contemporary User Experience in Digital Libraries"}
%title=config['plugins.tog_core.site.name']
%meta{:name=>"language", :content=>I18n.locale}
%meta{'http-equiv'=>"content-style-type", :content=>"text/css"}
%meta{'http-equiv'=>"title", :content=>config['plugins.tog_core.site.name']}
%meta{:name=>"title", :content=>config['plugins.tog_core.site.name']}
%meta{:name=>"keywords", :content=>"usability, user experience, digital libraries"}
%meta{:name=>"author", :content=>"Boon Low"}

-#%link{:rel=>"icon", :href=>"/tog_core/images/favicon.ico"}
-#%link{:rel=>"stylesheet", :href=>"/tog_core/stylesheets/template.css", :media=>"screen", :type=>"text/css"}
-#%link{:rel=>"stylesheet", :href=>"/tog_core/stylesheets/style.css", :media=>"screen", :type=>"text/css"}
-#%link{:rel=>"stylesheet", :href=>"/tog_core/stylesheets/pages.css", :media=>"screen", :type=>"text/css"}
%link{:rel=>"stylesheet", :href=>"/stylesheets/surface.css", :type=>"text/css"}
%link{:rel=>"stylesheet", :href=>"/stylesheets/layout.css", :type=>"text/css"}

=inject_autodiscovery
-#=inject_js
-#=inject_css

%script{:src=>"/javascripts/jquery.js", :type=>"text/javascript"}
%script{:src=>"/javascripts/jquery.charactercounter.js", :type=>"text/javascript"}
-#%script{:src=>"/javascripts/application.js", :type=>"text/javascript"}

%section#page
	%header.masthead
		%nav
			%section#left_header_menu 
				%ul=links_for_navigation :site
			%section#right_header_menu
				= render :partial => "shared/header_options"
		= render_flash_messages
		%section.logo
			%a{:href=>"/", :title=>"ux2.0 project homepage"}
				%img{:src=>"/images/projectLogoGreen.png"}
		%section.project_title
			%h3 Usability &amp; Contemporary User Experience
			%h3 in Digital Libraries
		%section.jisc_logo
			%a{:href=>"http://www.jisc.ac.uk/", :title=>"Joint Information Systems Committee homepage"}
				%img{:src=>"/images/JISCcolour15.png"}

	= yield
	= yield :sidebar

	= render :partial => "/shared/footer"