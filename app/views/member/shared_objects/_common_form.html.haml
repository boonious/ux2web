%section
	%p
		%label.block{:for=>"post_title"} Title
		= f.text_field :title, :class => "wide"
		%label.block{:for=>"post_body"} Content - post (message, blog), link etc
		= f.text_area :content, :class => "wide"
	%p
		%label.block{:for=>"post_tag_list"} Tags, categories (separated by ,)
		= f.text_field :tag_list, :class => "wide"

	%p
		%label{:for=>"post_state"} Status
		= f.select "state", options_for_select([[ "Share this now!", "shared" ], ["Draft - not visible publically", "draft" ]], @shareable.state)
		%br
	/	
		%label{:for=>"update_published_at"}
			= check_box_tag "update_published_at", "1" 
			Publish this at
		= f.datetime_select :published_at
	
