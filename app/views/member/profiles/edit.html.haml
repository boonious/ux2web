%section#commons
	%h2= I18n.t('tog_social.profiles.member.update_profile')
	= error_messages_for :profile
	- form_for :profile, :url => member_profile_path(@profile), :html => {:method => :put, :multipart=>true} do |f|
		%fieldset
			%p
				%label{:for=>"profile_first_name"}= I18n.t('tog_social.profiles.model.first_name')
				%br
				= f.text_field :first_name, :class=>"fieldbox"
			%p
				%label{:for=>"profile_last_name"}= I18n.t('tog_social.profiles.model.last_name')
				%br
				= f.text_field :last_name, :class=>"fieldbox"
			%p
				%label{:for=>"profile_website"}= I18n.t('tog_social.profiles.model.website')
				%br
				= f.text_field :website, :class=>"fieldbox wide"
			%p
				%label{:for=>"profile_icon"}= I18n.t('tog_social.profiles.model.avatar')
				%br
				= icon_for_profile(@profile, 'big')
				= file_field "profile", "icon"
				%br
				%span.helpinfo= I18n.t('tog_social.profiles.model.avatar_help')
			= submit_tag I18n.t('tog_social.profiles.member.update_profile'), {:accesskey => "s", :class=>"button"}