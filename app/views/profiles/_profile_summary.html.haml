%section
	-if !@profile.user.groups.blank?
		%h3= I18n.t('tog_social.groups.site.title')
		%ul
		-for group in @profile.user.groups[1..-1]
			%li= link_to group.name, group_path(group)
		
		-if @profile.user.groups.size == 1
			%li= link_to "Join or create groups", groups_path 
		
